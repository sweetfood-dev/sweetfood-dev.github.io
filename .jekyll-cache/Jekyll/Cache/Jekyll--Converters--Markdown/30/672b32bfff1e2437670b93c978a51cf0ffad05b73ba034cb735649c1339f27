<div class="language-plaintext highlighter-rouge"><div class="highlight"><pre class="highlight"><code>func binarySearch(arr: [Int], find: Int) -&gt; Int {
    var low = 0
    var high = arr.count - 1
    var mid : Int
    
    while low &lt;= high {
        mid = (low + high) / 2
        if arr[mid] &gt; find {
            high = mid - 1
        }else if arr[mid] &lt; find {
            low = mid + 1
        }else {
            return mid
        }
    }
    return -1
}

